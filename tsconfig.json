{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "types": ["chrome"]
  },
  "include": ["feats/**/*", "types/**/*", "extension/**/*"],
  "exclude": ["node_modules", "dist", "**/*.py"]
}
