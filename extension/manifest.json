{
  "manifest_version": 3,
  "name": "Coursera Skipper",
  "version": "1.0.0",
  "description": "Automatically complete Coursera course items including quizzes, videos, and readings",
  "permissions": ["storage", "cookies", "activeTab", "scripting"],
  "host_permissions": ["*://*.coursera.org/*"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.coursera.org/*"],
      "js": ["content/content-script.js"],
      "css": ["content/content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*.coursera.org/*"]
    }
  ]
}
