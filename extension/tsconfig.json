{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["../*"],
      "@feats/*": ["../feats/*"],
      "@types/*": ["../types/*"],
      "@utils/*": ["../extension/utils/*"]
    },
    "types": ["chrome"]
  },
  "include": ["../**/*.ts"],
  "exclude": ["../node_modules", "../dist", "../**/*.py"]
}
